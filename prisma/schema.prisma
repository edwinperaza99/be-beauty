generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  buy_price   Float?
  paid_price  Float?
  image_url   String?
  stock_qty   Int?
  barcode     String?  @unique
  categories  String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}